<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/value_10dp"
    android:orientation="vertical"
    tools:context=".menu.zakat.kalkuza.kalkuza">

    <TextView
        android:id="@+id/txthitung"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Hitung Zakat Anda"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="25dp"/>

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_below="@+id/txthitung"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000"
            android:text="Penghasilan /bulan"/>

        <EditText
            android:id="@+id/edpenghasilan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:inputType="numberDecimal"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="Pengeluaran /bulan"/>

        <EditText
            android:id="@+id/edpengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:inputType="numberDecimal"
            android:textColor="#000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="(Total Gaji/bulan - Pengeluaran/bulan) / 2.5%"/>

    </LinearLayout>

    <Button
        android:id="@+id/butkalku"
        android:layout_below="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Kalkulasi"
        android:visibility="gone"
        android:background="@color/colorPrimary"/>
</LinearLayout>