<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background"
        tools:context="com.example.lazismu.ketek.menu.item.Beasiswa">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="120dp"
                android:text=":"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:text=":"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_bgbeasiswa" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="70dp"
            android:text="Donasi Beasiswa"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"
            android:text="Nama Donatur"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginStart="170dp"
            android:layout_marginTop="120dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="170dp"
            android:text="Jumlah Donasi"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/edt_nominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:hint="0"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="70dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="305dp"
            android:text="@string/rekening"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textStyle="bold" />

        <!-- <TextView
             android:id="@+id/textView5"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView4"
             android:layout_marginStart="20dp"
             android:layout_marginTop="12dp"
             android:text="@string/sumbangan"
             android:textAlignment="center" />-->

        <LinearLayout
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_margin="@dimen/value_16dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/placeholder"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_insert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:src="@drawable/placeholder"
                    android:text="Upload Bukti Tranfer" />

                <TextView
                    android:id="@+id/txt_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:src="@drawable/placeholder"
                    android:text="Place img"
                    android:textAlignment="textEnd"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_visibility_off_black_24dp"
                    android:gravity="end"
                    android:src="@drawable/placeholder"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="510dp"
            android:background="@android:color/holo_orange_dark"
            android:text="DONASI"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnPLAY"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/checkbox"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_spiker" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:text="@string/niat"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:layout_marginStart="45dp"
            android:layout_marginTop="0dp"
            android:text="@string/arti"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="13dp"
            android:textStyle="italic" />

    </RelativeLayout>
</ScrollView>